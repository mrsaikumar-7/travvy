# AI Trip Planner - Environment Configuration
# Copy this file to .env and fill in your values

# Application Settings
AI_TRIP_ENVIRONMENT=development
AI_TRIP_DEBUG=true
AI_TRIP_PROJECT_NAME=AI Trip Planner
AI_TRIP_API_VERSION=v1

# Server Settings
AI_TRIP_HOST=0.0.0.0
AI_TRIP_PORT=8000
AI_TRIP_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
AI_TRIP_ALLOWED_HOSTS=*

# Google Cloud Settings
AI_TRIP_GCP_PROJECT_ID=your-gcp-project-id
AI_TRIP_GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
AI_TRIP_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
AI_TRIP_GOOGLE_CLIENT_SECRET=your-google-client-secret
AI_TRIP_GOOGLE_AI_API_KEY=your-google-ai-api-key

# Database Settings
AI_TRIP_FIRESTORE_DATABASE_ID=ai-trip-planner
AI_TRIP_FIRESTORE_COLLECTION_PREFIX=

# Redis Settings
AI_TRIP_REDIS_URL=redis://localhost:6379
AI_TRIP_REDIS_PASSWORD=
AI_TRIP_REDIS_DB=0

# Celery Settings
AI_TRIP_CELERY_BROKER_URL=redis://localhost:6379/0
AI_TRIP_CELERY_RESULT_BACKEND=redis://redis:6379/0
AI_TRIP_CELERY_TASK_SERIALIZER=json
AI_TRIP_CELERY_ACCEPT_CONTENT=["json"]
AI_TRIP_CELERY_RESULT_SERIALIZER=json
AI_TRIP_CELERY_TIMEZONE=UTC

# Security Settings
AI_TRIP_JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
AI_TRIP_JWT_ALGORITHM=HS256
AI_TRIP_JWT_ACCESS_TOKEN_EXPIRE_HOURS=24
AI_TRIP_JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# API Rate Limiting
AI_TRIP_RATE_LIMIT_PER_MINUTE=60
AI_TRIP_RATE_LIMIT_PER_HOUR=1000
AI_TRIP_RATE_LIMIT_PER_DAY=10000

# AI Service Settings
AI_TRIP_AI_MODEL_NAME=gemini-1.5-pro
AI_TRIP_AI_TEMPERATURE=0.7
AI_TRIP_AI_MAX_OUTPUT_TOKENS=4096
AI_TRIP_AI_REQUEST_TIMEOUT=30

# External API Settings
AI_TRIP_GOOGLE_MAPS_API_KEY=your-google-maps-api-key
AI_TRIP_GOOGLE_PLACES_API_KEY=your-google-places-api-key

# File Upload Settings
AI_TRIP_MAX_FILE_SIZE_MB=10
AI_TRIP_ALLOWED_FILE_TYPES=["jpg","jpeg","png","webp","mp3","wav"]
AI_TRIP_UPLOAD_FOLDER=/tmp/uploads

# Monitoring and Logging
AI_TRIP_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
AI_TRIP_LOG_LEVEL=INFO
AI_TRIP_ENABLE_METRICS=true

# Feature Flags
AI_TRIP_ENABLE_VOICE_INPUT=true
AI_TRIP_ENABLE_IMAGE_ANALYSIS=true
AI_TRIP_ENABLE_REAL_TIME_COLLABORATION=true
AI_TRIP_ENABLE_PUSH_NOTIFICATIONS=false

# Email Settings (for notifications)
AI_TRIP_SMTP_HOST=smtp.gmail.com
AI_TRIP_SMTP_PORT=587
AI_TRIP_SMTP_USERNAME=your-email@gmail.com
AI_TRIP_SMTP_PASSWORD=your-app-password
AI_TRIP_EMAIL_FROM=your-email@gmail.com
